{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build",
      "npm --prefix \"$RESOURCE_DIR\" run configure-runtime"
    ]
  },
  "hosting": {
    "public": "frontend/dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/.well-known/webfinger",
        "function": "default"
      },
      {
        "source": "/ap/**",
        "function": "default"
      },
      {
        "source": "/**",
        "destination": "/index.html"
      }
    ],
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR/..\" run build"
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
